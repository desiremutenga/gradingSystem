
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Subject Name</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>RegNum</th>
                                            <th>Name</th>
                                            <th>Surname</th>
                                            <th>Maths</th>
                                            <th>Shona</th>
                                            <th>English</th>
                                            <th>Agriculture</th>
                                            <th>ICT</th>
                                            <th>Heritage</th>
                                            <th>PE</th>
                                            <th>Comments</th>
                                           
                                        </tr>
                                    </thead>
                                   
                                    <tbody>

                                        <% if(records.length >0){ %>

                                            <% records.forEach(data=>{%>

                                                <tr>
                                                    <td><%= data.regnum %></td>
                                                    <td><%= data.name %></td>
                                                    <td><%= data.surname %></td>
                                                    <td><%= data.maths %></td>
                                                    <td><%= data.shona %></td>
                                                    <td><%= data.english %></td>
                                                    <td><%= data.agriculture %></td>
                                                    <td><%= data.ict %></td>
                                                    <td><%= data.heritage %></td>
                                                    <td><%= data.pe %></td>
                                                    <td><%= data.comments %></td>
                                                
                                                </tr>

                                           <% })%>

                                       <% }%>
                                    
                     
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>